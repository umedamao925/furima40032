   <%# 商品一覧 %>
<% current_user.like_items.each do |like_item|%>
      <li class='list'>
        <%= link_to item_path(like_item.id) do %>
        <div class='item-img-content'>
          <%= image_tag like_item.image, class: "item-img" %>
        <% if like_item.order.present? %>
          <div class='sold-out'>
        <span>Sold Out!!</span>
          </div>
        <% end %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= like_item.item_name %>
          </h3>
          <div class='item-price'>
            <span><%= like_item.price %>円<br><%= like_item.cost_bearer.name %></span>
            <div class='star-btn'>
              <%#<%= image_tag "star.png", class:"star-icon" %>
          <% @like_items.each do |item| %>
          <div class='star-count-count'><%= item.likes.count %></div>
          <div class='star-count-subtext'>件</div>
          <% end %>
            </div>
          </div>
        </div>
         <% end %>
        <% end %>